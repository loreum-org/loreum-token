{
  "name": "@loreum/loreum-token",
  "version": "0.1.0",
  "description": "Loreum Token",
  "author": "Loreum",
  "license": "MIT",
  "private": false,
  "files": [
    "/abis/*.json",
    "/src/*.sol",
    "/typechain"
  ],
  "keywords": [
    "loreum",
    "LORE"
  ],
  "engines": {
    "node": ">=16"
  },
  "homepage": "https://loreum.org",
  "bugs": "https://github.com/loreum-org/loreum-token/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/loreum-org/loreum-token.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "setup": "git submodule update --init --recursive",
    "chain": "hardhat node",
    "compile": "hardhat compile",
    "deploy": "npx hardhat run --network localhost scripts/deploy.ts",
    "deploy:goerli": "npx hardhat run --network goerli scripts/deploy.ts",
    "deploy:mainnet": "npx hardhat run --network mainnet scripts/deploy.ts",
    "format:check": "prettier --check '**/*.{ts,json,yaml,md}'",
    "format:write": "prettier --write '**/*.{ts,json,yaml,md}'",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "test": "forge test"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.20.55",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethers": "^5.6.4",
    "hardhat": "^2.12.0",
    "hardhat-abi-exporter": "^2.8.0",
    "hardhat-preprocessor": "^0.1.5",
    "prettier": "^2.3.2",
    "ts-node": "^10.1.0",
    "typechain": "^8.1.0",
    "typescript": "^4.5.2"
  }
}
